{
  "name": "tasks-typescript-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then pnpm install husky --save-dev; fi",
    "start:mooc:backend": "NODE_ENV=production node dist/src/apps/mooc/backend/start",
    "dev:mooc:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/apps/mooc/backend/start.ts",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "pnpm run test:unit && pnpm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "test:features": "pnpm run test:mooc:backend:features",
    "test:mooc:backend:features": "NODE_ENV=test cucumber-js -p mooc_backend --exit",
    "build": "pnpm run build:clean && pnpm run build:tsc && pnpm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "command:mooc:rabbitmq": "NODE_ENV=production ts-node src/apps/mooc/backend/command/runConfigureRabbitMQCommand"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run lint:fix",
      "npm run prettier:fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@cucumber/cucumber": "9.1.2",
    "@types/amqplib": "0.10.1",
    "@types/body-parser": "1.19.2",
    "@types/compression": "1.7.2",
    "@types/convict": "6.1.3",
    "@types/errorhandler": "1.5.0",
    "@types/express": "4.17.17",
    "@types/faker": "5.5.3",
    "@types/jest": "29.5.2",
    "@types/jsonwebtoken": "9.0.2",
    "@types/supertest": "2.0.12",
    "@types/uuid": "9.0.2",
    "@types/uuid-validate": "0.0.1",
    "@typescript-eslint/eslint-plugin": "5.50.0",
    "@typescript-eslint/parser": "5.59.9",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard-with-typescript": "35.0.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-n": "15.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "faker": "5.5.3",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "amqplib": "0.10.3",
    "body-parser": "1.20.2",
    "compression": "1.7.4",
    "convict": "6.2.4",
    "copy": "0.3.2",
    "errorhandler": "1.5.1",
    "express": "4.18.2",
    "express-promise-router": "4.1.1",
    "express-validator": "7.0.1",
    "glob": "10.2.7",
    "helmet": "7.0.0",
    "http-status": "1.6.2",
    "jsonwebtoken": "9.0.1",
    "mongodb": "4.0.0",
    "node-dependency-injection": "2.6.11",
    "uuid": "9.0.0",
    "uuid-validate": "0.0.3"
  }
}
